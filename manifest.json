{
  "manifest_version": 3,
  "name": "Unit Toggler",
  "version": "1.0",
  "description": "Converts units on webpages",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/convert.js", "lib/units.js", "content.js"]
    }
  ]
}
